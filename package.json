{
  "name": "colony-portal-network",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "scripts": {
    "preinstall": "git submodule update --init --remote ./lib/colonyNetwork && cd lib/colonyNetwork && yarn",
    "create:testColony": "npm run start:blockchain:client && npm run start:trufflePig && npm run deploy:colony && node scripts/createTestColony.js",
    "start:blockchain:client": "xterm -e lib/colonyNetwork/scripts/start-blockchain-client.sh",
    "stop:blockchain:client": "cd lib/colonyNetwork && npm run stop:blockchain:client",
    "start:trufflePig": "cd lib/colonyNetwork && trufflepig --ganacheKeyFile ganache-accounts.json",
    "deploy:contracts": "cd lib/colonyNetwork && truffle migrate --compile-all --reset"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@colony/colony-js-adapter-ethers": "^1.3.0",
    "@colony/colony-js-client": "^1.3.0",
    "@colony/colony-js-contract-loader-http": "^1.3.0",
    "truffle": "^4.1.11",
    "ganache-cli": "^6.1.0",
    "trufflepig": "^1.0.4",
    "truffle-assertions": "^0.2.0",
    "chai": "^4.1.2"
  }
}
